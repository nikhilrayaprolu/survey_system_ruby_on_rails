<div class="container">
<% @question.answers.each do |answer| %>
	<div>
		<%= answer.option %>
    <%= answer.updated_at %>
		<%= answer.textcol %>

	</div>
	<% end %>
	
	<div id="myfirstchart" style="height: 250px;"></div>
	<div id="donut-example" style="height: 250px;"></div>


<script type="text/javascript">

var option=[0,0,0,0,0];
<% @question.answers.each do |answer| %>
	 option[<%= answer.option %>]+=1;

	
	<% end %>
	new Morris.Bar({
  // ID of the element in which to draw the chart.
  element: 'myfirstchart',
  // Chart data records -- each entry in this array corresponds to a point on
  // the chart.

  data: [
    { year: 'option1', value: option[1] },
    { year: 'option2', value: option[2] },
    { year: 'option3', value: option[3] },
    { year: 'option4', value: option[4] },
    
  ],
  // The name of the data record attribute that contains x-values.
  xkey: 'year',
  // A list of names of data record attributes that contain y-values.
  ykeys: ['value'],
  // Labels for the ykeys -- will be displayed when you hover over the
  // chart.
  labels: ['Value']
});
Morris.Donut({
  element: 'donut-example',
  data: [
    {label: "option1", value: option[1]},
    {label: "option2", value: option[2]},
    {label: "option3", value: option[3]},
    {label: "option4", value: option[4]},

  ]
});

</script>
</div>